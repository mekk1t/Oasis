
@{
    ViewData["Title"] = "Success";
}

<h1>Корзина</h1>

<table>
    <thead>
        <tr class="text-center">
            <th colspan="6">Ожидает оплаты</th>
        </tr>
        <tr class="text-sm-center">
            <th>Время сеанса</th>
            <th>Кинотеатр</th>
            <th>Фильм</th>
            <th>Ряд</th>
            <th>Место</th>
            <th>Стоимость</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i < 4; i++)
        {
            <tr class="text-left">
                <td>10:00</td>
                <td>Юбилейный</td>
                <td>Семь</td>
                <td>4</td>
                <td>@i</td>
                <td>300</td>
            </tr>
        }
    </tbody>
</table>
<br />
<p>К оплате: 900</p>



